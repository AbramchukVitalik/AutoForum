model User {
  id        Int      @id @default(autoincrement())

  email     String   @unique
  nickname  String
  password  String

  role      Role     @default(USER)
  profile   Profile?
}

model Profile {
  id        Int    @id @default(autoincrement())

  bio       String?
  image     String? 
  postsNum  Int
  like      Int

  likedMessages   LikedMessage[]

  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())  
}

model LikedMessage {
  id        Int    @id @default(autoincrement())

  idMessage String

  profileId    Int
  profile      Profile   @relation(fields: [profileId], references: [id])
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}